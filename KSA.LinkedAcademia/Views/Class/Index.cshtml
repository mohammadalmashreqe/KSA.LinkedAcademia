@model IEnumerable<KSA.LinkedAcademia.Models.Class>

@{
    ViewData["Title"] = "Index";
}

<h2 style="font-family: 'Poppins', sans-serif;
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 1px;
    display: inline-block;
    border-radius: 50px;
    transition: 0.5s;
   
    border: 2px solid #fff;
    ">
    Class List
</h2>

<p>
    <a asp-action="Create"> <i style="margin-right:4px" class="fas fa-plus"></i>Create New Class</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Univirsety)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator.Fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Univirsety.Name)
                </td>
                <td>

                    <a asp-action="Join" asp-controller="ClassStudents" asp-route-id="@item.Id"><i class="fas fa-user-plus"></i> Join </a>

                </td>
            </tr>
        }
    </tbody>
</table>
